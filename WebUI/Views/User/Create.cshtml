@model Models.User

@{
    ViewData["Title"] = "Create your Beelicious account!";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">

    <div class="col-sm-4"></div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input style="background-color:white" asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input style="background-color:white" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input style="background-color:white" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" style="background-color:white" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @*
                    commenting the access boolean out, so that I can have it if needed, but I plan on removing this, and having people get a default value of false instead
                    managers will be able to edit this later in a private menu.
                    <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Access" /> @Html.DisplayNameFor(model => model.Access)
                    </label>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
