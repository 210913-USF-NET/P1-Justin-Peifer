@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<style>
    table, th, td {
        border: 1px solid black;
    }

    table {
        border-spacing: 15px;
        background-color: lightyellow;
        border: double solid black;
    }
    form {
        text-align:center;
    }

</style>
<body style="background-image: linear-gradient(#ffaa11, #ffaa11, saddlebrown)">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #ffaa11; ">
            <div class="container">
                <a class="navbar-brand" style="padding: 4px;margin:auto" asp-controller="Home" asp-action="Index"> 
                <img src="https://i.imgur.com/APA9lBa.png" style="height:30px;width: auto;" title="BeeliciousLogo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="StoreFront" asp-action="Index">Shop</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @if (Context.Request.Cookies.TryGetValue("CurrentUserId", out string value) == false)
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                        </li>
                    }
                        </li>
                    </ul>
                </div>
            </nav>


        </header>
    <center>
        <style>

        </style>
        <div>
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </center>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; Justin Peifer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
